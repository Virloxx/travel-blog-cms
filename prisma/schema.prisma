datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

// Add to diagram
model Spotlight {
  id      Int  @id @default(autoincrement())
  post_id Int  @unique
  post    Post @relation(fields: [post_id], references: [id])
}

model Post {
  id                Int         @id @default(autoincrement())
  title             String
  thumbnail_img     String
  short_description String //Add to diagram
  content           String
  created_at        DateTime
  edited_at         DateTime
  Spotlight         Spotlight?  //needed for some prisma reason
}
